{% extends 'layout.html.twig' %}

{% block content %}
    <div class="main">
        <div class="robots percy">
            <h2>PERCY</h2>
            <img class="random-img" src="/assets/images/robots/percy.png" alt="">
        </div>
        <div class="robots ginny">
            <h2>GINNY</h2>
            <img src="/assets/images/robots/percy.png" alt="">
        </div>

        <!--Section 1 == Aeroport -->
        <div class="airport ">
            <img src="assets/images/villes/meteo.png" alt="">
            <div class="wrapper meteo">
                <h1>Mars Meteo</h1>
                {% set date = 23 %}
                {% set date = date +1 %}
                {% for meteo in meteo.validity_checks.sols_checked %}
                    <div class="box-weather">
                        <h4>Sol {{ meteo }}</h4>
                        <h5>Aug. {{ date + loop.index }}</h5>
                        <div class="line"></div>
                        <h4>High : {{ random(-19,-15) }} °</h4>
                        <h4>Low : {{ random(-150,-146) }} °</h4>
                    </div>
                {% endfor %}

            </div>
        </div>


        <!--Section 2 == Ville festive -->
        <div class="festival">
            <img src="assets/images/villes/vaisseau.png" alt="">
            <div class="wrapper w-vaisseau">
                <iframe src="https://calendar.google.com/calendar/embed?height=600&amp;wkst=1&amp;bgcolor=%23EF6C00&amp;ctz=Europe%2FParis&amp;src=YmFjaGlyLm5kaWF5ZS5wcm9AZ21haWwuY29t&amp;color=%23039BE5&amp;showTitle=0&amp;showNav=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;showTz=0&amp;showDate=0" style="border:solid 1px #777" width="450" height="450" frameborder="0" scrolling="no"></iframe>
            </div>
        </div>

        <!--Section 3 == Randonnée -->
        <div class="hiking">
            <img src="assets/images/villes/hiking-bag.png" alt="">
            <div class="wrapper w-hiking">
                <a href="/hiking/show/">A ride robots ?</a>
            </div>
        </div>


    </div>

{% endblock %}

